{
  "name": "gql-unicorn",
  "version": "0.0.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release:major": "bun run release.pre && release-it -i major --ci",
    "release:minor": "bun run release.pre && release-it -i minor --ci",
    "release:patch": "bun run release.pre && release-it -i patch --ci",
    "release.pre": "bun run build && bun test",
    "build": "bun build:cli && bun build:codegen && bun build:runtime",
    "build:cli": "cd packages/cli && bun tsup",
    "build:codegen": "cd packages/codegen && bun tsup",
    "build:runtime": "cd packages/runtime && bun tsup",
    "publish": "bun publish:cli && bun publish:codegen && bun publish:runtime",
    "publish:cli": "cd packages/cli && bun publish --frozen-lockfile",
    "publish:codegen": "cd packages/codegen && bun publish --frozen-lockfile",
    "publish:runtime": "cd packages/runtime && bun publish --frozen-lockfile"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/markdown": "^6.4.0",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "release-it": "^19.0.2",
    "tsup": "^8.5.0",
    "typescript-eslint": "^8.32.1",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "graphql": "^16.11.0",
    "typescript": "^5.0.0",
    "utility-types": "^3.11.0"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/bumper": {
        "out": {
          "file": "packages/*/package.json",
          "path": [
            "version"
          ]
        }
      },
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        },
        "writerOpts": {
          "groupBy": "scope"
        },
        "infile": "CHANGELOG.md"
      }
    }
  }
}
